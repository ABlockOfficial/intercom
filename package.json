{
  "name": "@zenotta/intercom",
  "version": "0.0.3",
  "description": "A small utility server to exchange arbitrary data between clients",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && esbuild src/index.ts --bundle --platform=node --target=node14.16.0 --outfile=dist/index.js",
    "build:artifacts": "npm run build && npx pkg -t linux,macos,win . --out-path dist",
    "preserve": "npm run build",
    "dev": "cross-env NODE_ENV=development LOG_LEVEL=silly KEY_LIFETIME=1000 DEL_RATE_LIMIT=1000 SET_RATE_LIMIT=1000 GET_RATE_LIMIT=1000 REDIS_URL=redis://0.0.0.0:6379 ts-node-dev --respawn ./src/index.ts",
    "start": "cross-env NODE_ENV=production LOG_LEVEL=warn KEY_LIFETIME=5 DEL_RATE_LIMIT=150 SET_RATE_LIMIT=150 GET_RATE_LIMIT=150 REDIS_URL=redis://cache:6379 node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npx eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "author": "Anton Troskie",
  "license": "MIT",
  "dependencies": {
    "@zenotta/zenotta-js": "^1.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-rate-limit": "^6.3.0",
    "helmet": "^5.0.2",
    "lodash": "^4.17.21",
    "redis": "^4.0.3",
    "rimraf": "^3.0.2",
    "tweetnacl": "^1.0.3",
    "typescript": "^4.5.5",
    "winston": "^3.6.0",
    "winston-transport-sentry-node": "^2.3.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.178",
    "@types/loglevel": "^1.6.3",
    "@types/node": "^17.0.18",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.27",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "pkg": "^5.5.2",
    "prettier": "^2.5.1",
    "ts-node-dev": "^1.1.8"
  }
}